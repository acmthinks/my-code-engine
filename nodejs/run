
#!/bin/bash

# Env Vars:
# REGISTRY: name of the image registry/namespace to get the images

# Clean up previous run
function clean() {
  set +ex
  echo Cleaning...
  (
  ibmcloud ce app delete -n my-nodejs-app -f
  rm -f out
  ) > /dev/null 2>&1
}

clean
[[ "$1" == "clean" ]] && exit 0

set -ex
export REGISTRY=${REGISTRY:-icr.io/codeengine}

# Create the app
ibmcloud ce app create -n my-nodejs-app --image ${REGISTRY}/my-nodejs-app
#ibmcloud ce app create -n hellow --image ${REGISTRY}/hello --registry-secret <secret>

# Get the URL of the app for later use
URL=$(ibmcloud ce app get -n my-nodejs-app -o url)

# Now call it
curl -fs $URL | tee out
[[ "${PIPESTATUS[0]}" == "0" ]]

# Clean up
clean
